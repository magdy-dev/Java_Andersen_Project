<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Logger for BookingRepositoryImpl -->
        <Logger name="com.andersen.repository_criteria_API.booking.BookingRepositoryImpl" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Other loggers -->
        <Logger name="UserOutPut" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="Loge" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger -->
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>